    <bean id="person" class="com.sample.filejob.Person" scope="prototype" />

    <bean id="itemReader" class="org.springframework.batch.item.file.FlatFileItemReader" scope="step">
        <property name="lineMapper">
            <bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
                <property name="lineTokenizer">
                    <bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
                        <property name="delimiter" value=","/>
                        <property name="names" value="firstName,lastName" />
                    </bean>
                </property>

                <property name="fieldSetMapper">
                    <bean class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
                        <property name="prototypeBeanName" value="person" />
                    </bean>
                </property>


<!--                <property name="fieldSetMapper">-->
<!--                    <bean class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">-->
<!--                        <property name="targetType" value="com.example.batchprocessing.Person" />-->
<!--                    </bean>-->
<!--                </property>-->

<!--                <property name="fieldSetMapper">-->
<!--                    <bean class="com.example.batchprocessing.Person" />-->
<!--                </property>                -->
            </bean>
        </property>
        <property name="resource" value="classpath:sample-data.csv" />
<!--        <property name="resource" value="#{jobParameters['inputFile']}" />-->
    </bean>

    <bean id="itemWriter" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
        <property name="assertUpdates" value="true"/>
        <property name="itemSqlParameterSourceProvider">
            <bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider"/>
        </property>
        <property name="sql" value="INSERT INTO people (first_name, last_name) VALUES (:firstName, :lastName)"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!--
    ############
    #### AIS
    ############
    -->

    <job id="aisDynamicJob" xmlns="http://www.springframework.org/schema/batch">
        <step id="aisStep1">
            <tasklet>
                <chunk reader="aisItemReader"  writer="aisItemWriter" commit-interval="1000"/>
            </tasklet>
        </step>
    </job>

    <bean id="aisDynamic" class="com.example.dto.AisDynamic" scope="prototype" />

    <bean id="aisItemReader" class="org.springframework.batch.item.file.FlatFileItemReader" scope="step">
        <property name="lineMapper">
            <bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
                <property name="lineTokenizer">
                    <bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
                        <property name="delimiter" value=","/>
                        <property name="names" value="mmsi,ais_dt,m_latitude,m_longitude,sog,cog,heading" />
                    </bean>
                </property>

                <property name="fieldSetMapper">
                    <bean class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
                        <property name="prototypeBeanName" value="aisDynamic" />
                    </bean>
                </property>
            </bean>
        </property>

        <property name="resource">
            <bean class="org.springframework.core.io.FileSystemResource">
                <constructor-arg value="#{jobParameters['inputFile']}"/>
            </bean>
        </property>
        <property name="linesToSkip" value="3"/>
    </bean>

    <bean id="aisItemWriter" class="org.springframework.batch.item.database.JdbcBatchItemWriter">
        <property name="assertUpdates" value="true"/>
        <property name="itemSqlParameterSourceProvider">
            <bean class="org.springframework.batch.item.database.BeanPropertyItemSqlParameterSourceProvider"/>
        </property>
        <property name="sql" value="INSERT INTO ais_dynamic (mmsi,ais_dt,m_latitude,m_longitude,sog,cog,heading) VALUES (:mmsi,:ais_dt,:m_latitude,:m_longitude,:sog,:cog,:heading)"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>

</beans>
